<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ToForestFragment">

    <include
        android:id="@+id/include3"
        layout="@layout/fragment_global" />

    <ImageView
        android:id="@+id/ivForest"
        android:layout_width="414dp"
        android:layout_height="309dp"
        android:src="@drawable/forest"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvLevel1" />

    <TextView
        android:id="@+id/tvLevel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/press_start_2p"
        android:text="Level 1"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivdarkS"
        android:layout_width="150dp"
        android:layout_height="131dp"
        android:layout_marginEnd="250dp"
        android:src="@drawable/fresa_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivdarkS1"
        android:layout_width="101dp"
        android:layout_height="102dp"
        android:src="@drawable/fresa_black"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="329dp" />

    <ImageView
        android:id="@+id/ivdarkS2"
        android:layout_width="115dp"
        android:layout_height="112dp"
        android:layout_marginEnd="50dp"
        android:src="@drawable/fresa_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ivdarkS"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.607" />

    <ImageView
        android:id="@+id/ivstrawberry"
        android:layout_width="124dp"
        android:layout_height="98dp"
        android:src="@drawable/fresa_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivdarkS1"
        tools:layout_editor_absoluteY="355dp" />

    <ImageView
        android:id="@+id/ivCoco2"
        android:layout_width="116dp"
        android:layout_height="117dp"
        android:src="@drawable/coco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include3"
        app:layout_constraintVertical_bias="0.371" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="311dp"
        android:layout_height="64dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btDarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:text="Darks"
            app:cornerRadius="50dip" />

        <Button
            android:id="@+id/btRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Red"
            app:cornerRadius="50dip" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvStrawberrys"
        android:layout_width="292dp"
        android:layout_height="123dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/prompt"
        android:text="@string/level1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCoco2" />


</androidx.constraintlayout.widget.ConstraintLayout>